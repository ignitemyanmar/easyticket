<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/lydetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/pussian_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ဝယ္ယူသည့္ ေန႕ရက္"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ခရီး စဥ္"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ေဘာင္ ခ်ာ နံပါတ္"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_total_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ခံုအ ေရအတြက္"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ရွင္း - ႏႈန္း"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_percented_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="% ႏုတ္ၿပီး  စုစု ေပါင္း"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <CheckBox
                android:id="@+id/chk_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:gravity="center_vertical" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/lst_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                </ListView>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/pussian_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.smk.custom.view.CustomTextView
                android:id="@+id/CustomTextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="အားလံုး စုစု ေပါင္း = "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <com.smk.custom.view.CustomTextView
                android:id="@+id/txt_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="စုစု ေပါင္း"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <com.smk.custom.view.CustomButton
                android:id="@+id/btn_pay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/forest_green"
                android:enabled="false"
                android:text="ေပးေခ်ရန္"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lySearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F000000"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:background="#d5f1e9"
            android:clickable="true" >

            <LinearLayout
                android:id="@+id/lySearch112"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ထြက္ခြာ မည့္ၿမိဳ႕မ်ား ေရႊးရန္"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />

                    <Spinner
                        android:id="@+id/spn_TripsFrom"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_border" />

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/TextView01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ေရာက္ ရိွ မည္ ့ၿမိဳ႕မ်ား ေရႊးရန္"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />

                    <Spinner
                        android:id="@+id/spn_TripsTo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_border" />

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/TextView03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ေန႕ရက္ မွ"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/btnDateFrom"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_border"
                        android:text="Choose from Date"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/TextView04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ေန႕ရက္ သို႕"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/btnDateTo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_border"
                        android:text="Choose to Date"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <com.smk.custom.view.CustomTextView
                        android:id="@+id/TextView05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="အခ်ိန္မ်ား ေရႊးရန္"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />

                    <Spinner
                        android:id="@+id/spn_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_border"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btnSearch"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:text="Search"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>