<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_invoice_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ေဘာင္ခ်ာ နံပါတ္"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="အမည္"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_seat_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ခံု နံပါတ္"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ခံု နံပါတ္"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_trip_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="သြား - ေန႕"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ၿမိဳ႕ အမည္"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ရွင္း - ႏႈန္း"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ခံု နံပါတ္"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="သင့္ေငြး"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000" />

</LinearLayout>