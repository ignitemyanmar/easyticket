<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="5dp" >

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mg Mg"
        android:textSize="18dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: 0912847378"
        android:textSize="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="YGN - MDY"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <com.smk.custom.view.CustomTextView
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12/06/2014"
        android:textSize="18dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@color/dark_blue"
        android:gravity="center_vertical" >

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_total_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Total Ticket: 10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Amout: 300000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>