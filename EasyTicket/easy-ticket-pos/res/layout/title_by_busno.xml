<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000"
        android:gravity="center_vertical" >

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_order_busno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text="ကားနံပါတ္"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text="ကား အမ်ိဳးအစား"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_trip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text="ကားထြက္ ခ်ိန္"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_total_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="ခံုအ ေရအတြက္"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <com.smk.custom.view.CustomTextView
            android:id="@+id/txt_total_amout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="စုစုေပါင္း"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>